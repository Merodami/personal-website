{
  "name": "personal-website",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "astro dev --port 3000",
    "build": "astro check && astro build",
    "preview": "astro preview --port 3001",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "prepare": "husky",
    "open-lighthouse": "lighthouse http://localhost:3001 --view --output-path=./lighthouse/$(date +%Y%m%d_%H%M%S).report.html",
    "update": "yarn upgrade-interactive",
    "deploy": "wrangler deploy",
    "wrangler": "wrangler",
    "quality:types": "type-coverage",
    "quality:types:detail": "type-coverage --detail",
    "quality:deps": "dependency-cruiser src --config .dependency-cruiser.cjs",
    "quality:deps:graph": "dependency-cruiser src --include-only '^src' --output-type dot --config .dependency-cruiser.cjs | dot -T svg > dependency-graph.svg",
    "quality:duplicates": "jscpd .",
    "quality:duplicates:report": "jscpd . --reporters html --output ./jscpd-report",
    "quality:unused": "knip",
    "quality:unused:strict": "knip --production --strict",
    "quality:all": "yarn quality:types && yarn quality:deps && yarn quality:duplicates && yarn quality:unused",
    "quality:ci": "yarn quality:types && yarn quality:deps && yarn quality:duplicates && yarn quality:unused:strict"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/sitemap": "^3.4.1",
    "astro": "^5.12.3",
    "astro-compress": "^2.3.8",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lodash-es": "^4.17.21",
    "react": "^19.1.0",
    "react-i18next": "^15.6.1",
    "sharp": "^0.34.3",
    "typescript": "^5.8.3",
    "wrangler": "^4.26.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.32.0",
    "eslint-plugin-astro": "^1.3.1",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "knip": "^5.62.0",
    "lighthouse": "^12.8.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^4.1.11",
    "type-coverage": "^2.29.7",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,astro}": "eslint --fix",
    "*.{js,ts,astro,css,md,json}": "prettier --write"
  },
  "packageManager": "yarn@4.9.1+sha512.f95ce356460e05be48d66401c1ae64ef84d163dd689964962c6888a9810865e39097a5e9de748876c2e0bf89b232d583c33982773e9903ae7a76257270986538"
}
