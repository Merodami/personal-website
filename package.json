{
  "name": "personal-website",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "astro dev --port 3000",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview --port 3001",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "prepare": "husky install",
    "open-lighthouse": "lighthouse http://localhost:3001 --view --output-path=./lighthouse/$(date +%Y%m%d_%H%M%S).report.html",
    "update": "pnpm update --latest"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/sitemap": "^3.4.1",
    "astro": "^5.12.2",
    "astro-compress": "^2.3.8",
    "sharp": "^0.34.3",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lighthouse": "^12.8.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^4.1.11"
  },
  "lint-staged": {
    "*.{js,ts,astro}": "eslint --fix",
    "*.{js,ts,astro,css,md,json}": "prettier --write"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
