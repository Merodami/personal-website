---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/common/Button.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl md:text-8xl font-bold text-purple-400 mb-4">404</h1>
      <h2 class="text-2xl md:text-3xl font-semibold text-white mb-4">Page Not Found</h2>
      <p class="text-gray-300 mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <Button href="/" size="lg"> Go Back Home </Button>
    </div>
  </div>
</BaseLayout>
