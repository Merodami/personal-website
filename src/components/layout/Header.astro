---
import Navigation from './Navigation.astro';
import MobileMenuPWA from './MobileMenuPWA.astro';
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;
const email = 'hello@damianmeroni.dev';
---

<header class="header" id="main-header">
  <div class="container">
    <div class="nav-container">
      <div class="profile-section">
        <img src="/images/profile-64.jpeg" alt="Damian Meroni" class="profile-image" />
        <span class="email">{email}</span>
      </div>

      <div class="nav-section">
        <Navigation currentPath={currentPath} />
        <MobileMenuPWA currentPath={currentPath} />
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100;
    transition: transform 0.3s ease;
  }

  .header.hidden {
    transform: translateX(-50%) translateY(-120%);
  }

  .nav-container {
    background: var(--glass-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 50px;
    border: 1px solid var(--glass-border);
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
    box-shadow: var(--shadow-lg);
  }

  .profile-section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .profile-image {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--glass-border);
  }

  .email {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .nav-section {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  /* Medium screens - better spacing for tablet/small desktop */
  @media (max-width: 1024px) and (min-width: 640px) {
    .nav-container {
      padding: 0.6rem 1.25rem;
      gap: 1.5rem;
    }

    .profile-image {
      width: 30px;
      height: 30px;
    }

    .email {
      font-size: 0.8rem;
    }
  }

  /* Responsive adjustments for mobile */
  @media (max-width: 639px) {
    .header {
      top: 0.5rem;
      left: 0.5rem;
      right: 0.5rem;
      transform: none;
      width: auto;
    }

    .header.hidden {
      transform: translateY(-120%);
    }

    .nav-container {
      padding: 0.75rem 1rem;
      gap: 1rem;
      justify-content: space-between;
      min-height: 56px;
      align-items: center;
    }

    .profile-section {
      gap: 0.75rem;
      flex-shrink: 0;
      display: flex;
      align-items: center;
    }

    .profile-image {
      width: 40px;
      height: 40px;
      flex-shrink: 0;
    }

    .email {
      font-size: 1rem;
      white-space: nowrap;
      font-weight: 500;
      line-height: 1;
    }

    .nav-section {
      gap: 0.75rem;
      flex-shrink: 0;
      display: flex;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .nav-container {
      padding: 0 0.75rem;
      gap: 0.75rem;
      min-height: 52px;
    }

    .profile-section {
      gap: 0.625rem;
    }

    .profile-image {
      width: 36px;
      height: 36px;
    }

    .email {
      font-size: 0.9375rem;
    }

    .nav-section {
      gap: 0.625rem;
    }
  }

  @media (max-width: 400px) {
    .email {
      display: none;
    }

    .nav-container {
      padding: 0.625rem 0.75rem;
      min-height: 48px;
    }

    .profile-image {
      width: 30px;
      height: 30px;
    }
  }
</style>

<script>
  let lastScrollY = 0;
  let ticking = false;

  const header = document.getElementById('main-header');

  function updateHeader() {
    const scrollY = window.scrollY;

    if (scrollY > lastScrollY && scrollY > 100) {
      header?.classList.add('hidden');
    } else {
      header?.classList.remove('hidden');
    }

    lastScrollY = scrollY;
    ticking = false;
  }

  function requestTick() {
    if (!ticking) {
      window.requestAnimationFrame(updateHeader);
      ticking = true;
    }
  }

  window.addEventListener('scroll', requestTick, { passive: true });
</script>
