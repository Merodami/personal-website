---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = true } = Astro.props;

const classes = `
  bg-gray-800 rounded-lg p-6 
  ${hover ? 'transition-all duration-300 hover:bg-gray-700 hover:shadow-xl hover:-translate-y-1' : ''}
  ${className}
`;
---

<div class={classes}>
  <slot />
</div>
