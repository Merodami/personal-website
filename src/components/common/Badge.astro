---
interface Props {
  text: string;
  variant?: 'default' | 'primary' | 'success' | 'warning';
}

const { text, variant = 'default' } = Astro.props;

const variantClasses = {
  default: 'bg-gray-800/50 text-gray-400 border border-gray-700',
  primary: 'bg-purple-500/10 text-purple-400 border border-purple-500/20',
  success: 'bg-green-500/10 text-green-400 border border-green-500/20',
  warning: 'bg-yellow-500/10 text-yellow-400 border border-yellow-500/20',
};
---

<span
  class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ${variantClasses[variant]}`}
>
  {text}
</span>
