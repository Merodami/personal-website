---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  external?: boolean;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  external = false,
} = Astro.props;

const variantClasses = {
  primary: 'button-primary gradient-accent text-white shadow-lg hover:shadow-xl',
  secondary: 'button-secondary',
  outline: 'button-outline',
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const classes = `
  button-base
  ${variantClasses[variant]}
  ${sizeClasses[size]}
  ${className}
`;

const Component = href ? 'a' : 'button';
const externalProps = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

<Component href={href} class={classes} {...externalProps}>
  <slot />
</Component>

<style>
  :global(.button-base) {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    transform: scale(1);
    text-decoration: none;
  }

  :global(.button-base:hover) {
    transform: scale(1.02);
  }

  :global(.button-base:focus) {
    outline: none;
    box-shadow:
      0 0 0 2px var(--color-bg),
      0 0 0 4px var(--color-primary);
  }

  :global(.button-primary) {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
    color: var(--color-text-inverse);
    border: 1px solid transparent;
  }

  :global(.button-primary:hover) {
    background: linear-gradient(
      135deg,
      var(--color-primary-hover) 0%,
      var(--color-accent-hover) 100%
    );
  }

  :global(.button-secondary) {
    background: var(--color-surface);
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  :global(.button-secondary:hover) {
    background: var(--color-surface-hover);
    border-color: var(--color-border-hover);
  }

  :global(.button-outline) {
    background: transparent;
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  :global(.button-outline:hover) {
    background: var(--color-surface);
    border-color: var(--color-primary);
    color: var(--color-primary);
  }
</style>
