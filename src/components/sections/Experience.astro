---
import Section from '@components/common/Section.astro';
import Card from '@components/common/Card.astro';
import Badge from '@components/common/Badge.astro';
import { useAstroI18n } from '@/i18n';

interface Experience {
  company: string;
  position: string;
  startDate: string;
  endDate: string;
  description: string;
  technologies: string[];
}

const { i18n } = useAstroI18n(Astro.url);
const experiences = i18n.t<Experience[]>('experience.jobs');
---

<Section id="experience">
  <div class="grid md:grid-cols-2 gap-12 items-start">
    <div>
      <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">{i18n.t('experience.title')}</h2>
      <p class="text-secondary text-lg">
        {i18n.t('about.paragraph1')}
      </p>
    </div>

    <div class="space-y-6">
      {
        experiences.map((exp) => (
          <Card hover={false} class="relative">
            <div class="flex items-start gap-4">
              <div
                class="flex-shrink-0 w-2 h-2 rounded-full mt-2"
                style="background-color: var(--color-primary)"
              />
              <div class="flex-grow">
                <div class="flex flex-wrap items-center gap-2 mb-2">
                  <h3 class="text-xl font-semibold text-primary">{exp.position}</h3>
                  <span class="text-secondary">at</span>
                  <span class="font-medium" style="color: var(--color-primary)">
                    {exp.company}
                  </span>
                </div>

                <div class="text-sm text-secondary mb-3">
                  {exp.startDate} - {exp.endDate}
                </div>

                <p class="text-secondary mb-4">{exp.description}</p>

                <div class="flex flex-wrap gap-2">
                  {exp.technologies.map((tech: string) => (
                    <Badge text={tech} variant="primary" />
                  ))}
                </div>
              </div>
            </div>
          </Card>
        ))
      }
    </div>
  </div>
</Section>
