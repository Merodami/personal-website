---
import Section from '../common/Section.astro';
import ProjectCard from '../ProjectCard.astro';
import { projects } from '../../data/projects';

const featuredProjects = projects.filter((p) => p.featured);
---

<Section id="projects" class="bg-gray-900/50">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Featured Projects</h2>
    <p class="text-gray-300 text-lg max-w-2xl mx-auto">
      Here are some of my recent projects that showcase my skills and passion for creating impactful
      digital solutions.
    </p>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {featuredProjects.map((project) => <ProjectCard project={project} />)}
  </div>

  <div class="text-center mt-12">
    <a
      href="/projects"
      class="inline-flex items-center text-purple-400 hover:text-purple-300 transition-colors font-medium"
    >
      View All Projects
      <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
        ></path>
      </svg>
    </a>
  </div>
</Section>
