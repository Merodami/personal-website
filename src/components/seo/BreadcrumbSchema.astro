---
import { useAstroI18n } from '@/i18n';

interface Props {
  pageName: string;
  pageUrl: string;
}

const { pageName, pageUrl } = Astro.props;
const { i18n } = useAstroI18n(Astro.url);

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: i18n.t('common.home'),
      item: 'https://damianmeroni.dev',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: pageName,
      item: `https://damianmeroni.dev${pageUrl}`,
    },
  ],
};
---

<script is:inline type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
