{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["src/pages/**/*.{astro,ts,tsx}", "src/layouts/**/*.astro"],
  "project": ["src/**/*.{ts,tsx,js,jsx,astro}"],
  "ignore": ["**/*.spec.ts", "**/*.test.ts", ".astro/**", "src/utils/theme.ts"],
  "ignoreDependencies": ["sharp"],
  "ignoreBinaries": ["dot"],
  "ignoreExportsUsedInFile": true,
  "astro": {
    "config": ["astro.config.*"]
  },
  "vitest": {
    "config": ["vitest.config.*"],
    "entry": ["tests/**/*.{test,spec}.{js,ts}"]
  },
  "eslint": {
    "config": [".eslintrc", ".eslintrc.{js,json,cjs}", "eslint.config.{js,mjs,cjs}"]
  },
  "prettier": {
    "config": [".prettierrc", "prettier.config.{js,cjs}"]
  },
  "husky": {
    "config": [".husky/*", "husky.config.js"]
  }
}
