{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@hooks/*": ["src/hooks/*"],
      "@types/*": ["src/types/*"],
      "@data/*": ["src/data/*"],
      "@stores/*": ["src/stores/*"],
      "@scripts/*": ["src/scripts/*"],
      "@assets/*": ["src/assets/*"]
    },
    "verbatimModuleSyntax": true,
    "types": ["astro/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.astro", "functions/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
